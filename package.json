{
  "name": "credentials",
  "version": "1.0.2",
  "description": "GitHub action to fetch Aembit credentials",
  "keywords": [
    "github",
    "action",
    "aembit"
  ],
  "homepage": "https://aembit.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aembit/credentials.git"
  },
  "license": "MIT",
  "author": "devops@aembit.io",
  "type": "commonjs",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint",
    "lint:write": "biome lint --write",
    "format": "biome format",
    "format:write": "biome format --write",
    "check": "biome check",
    "check:write": "biome check --write",
    "check:ci": "biome ci"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@types/node": "^24.10.0",
    "node-fetch": "^3.3.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
